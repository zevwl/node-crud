<div class="jumbotron text-center">
    <h1>Editing <%= event.name %></h1>
</div>

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    
        <% if (errorMessage.length > 0) { %>
            <div class="alert alert-danger text-center">
                <% for (let error of errorMessage) { %>
                    <p><%= error %></p>
                <% } %>
            </div>
        <% } %>

        <form action="/events/<%= event.slug %>" method="post">
        
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" name="name" type="text" class="form-control" value="<%= event.name %>">
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="5" class="form-control"><%= event.description %></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-success btn-lg">Update</button>
            </div>
        
        </form>
    
    </div>
</div>